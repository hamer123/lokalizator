<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="lokalizator">
	  <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	  <non-jta-data-source>java:jboss/datasources/MySQLDS</non-jta-data-source>
	  <class>com.pw.lokalizator.model.User</class>
	  <class>com.pw.lokalizator.model.UserSecurity</class>
	  <class>com.pw.lokalizator.model.Location</class>
	  <class>com.pw.lokalizator.model.Polygon</class>
	  <class>com.pw.lokalizator.model.PolygonPoint</class>
	  <class>com.pw.lokalizator.model.FriendInvitation</class>
	  <properties>
	     <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
	     <property name="hibernate.hbm2ddl.auto" value="create"/>
		 <property name="hibernate.show_sql" value="true"/>
	  </properties>
	</persistence-unit>
</persistence>
